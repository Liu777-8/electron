{
  "name": "electron-vite-vue",
  "private": true,
  "version": "0.0.0",
  "description": "基于 Electron + Vite + Vue 的桌面应用程序",
  "author": "Your Name",
  "main": "main.js",
  "type": "module",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm:dev:vite\" \"npm:dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "cross-env NODE_ENV=development electron .",
    "build": "vite build",
    "preview": "vite preview",
    "build:win": "npm run build && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false CSC_LINK=false CSC_KEY_PASSWORD=false electron-builder --win --config.win.target=dir",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux",
    "dist": "npm run build && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder",
    "pack": "npm run build && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --dir"
  },
  "build": {
    "appId": "com.yourcompany.electron-vite-vue",
    "productName": "健康提醒助手",
    "electronDownload": {
      "mirror": "https://npmmirror.com/mirrors/electron/"
    },
    "forceCodeSigning": false,
    "directories": {
      "output": "dist_electron"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "public",
        "to": "public",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": "dir",
      "icon": "public/icon.png",
      "sign": false,
      "verifyUpdateCodeSignature": false,
      "requestedExecutionLevel": "asInvoker",
      "signAndEditExecutable": false,
      "signDlls": false
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "public/icon.ico"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "dependencies": {
    "vue": "^3.4.0",
    "vue-router": "^4.2.0",
    "pinia": "^2.1.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^6.0.0",
    "concurrently": "^9.2.0",
    "cross-env": "^7.0.3",
    "electron": "^37.1.0",
    "electron-builder": "^24.13.3",
    "vite": "^7.0.0"
  }
}
